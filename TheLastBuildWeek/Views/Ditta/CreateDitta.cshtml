</head>

<h4>Aggiungi Ditta Farmaceutica al Database</h4>
<hr />

@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="container d-flex justify-content-center text-center">
    <div class="card px-5 py-5">
        <h1>Compila i campi</h1>  @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
