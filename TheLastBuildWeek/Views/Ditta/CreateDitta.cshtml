               @Html.ValidationMessageFor(model => model.Indirizzo, "", new { @class = "text-danger" })
        <input type="button" value="Inserisci azienda" class="btn btn-default" />
        <i class="fa fa-long-arrow-right ml-2 mt-1"></i>


    </div>
