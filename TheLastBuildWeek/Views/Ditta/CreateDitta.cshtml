@model TheLastBuildWeek.Models.T_DittaFarmaceutica

@{
    ViewBag.Title = "CreateDitta";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <head>


        <link href="~/Content/Dittacreate.css" rel="stylesheet" />
    </head>

    <h4>Aggiungi Ditta Farmaceutica al Database</h4>
    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="container d-flex justify-content-center text-center">
        <div class="card d-flex px-5 py-5 mt-5 justify-content-center">
            <h1>Compila i campi</h1>
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
            <input placeholder="Denominazione ditta" @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                   @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                   @Html.LabelFor(model => model.Recapito, htmlAttributes: new { @class = "control-label col-md-2" })
            <input type="text" class="form-control" placeholder="Recapito Telefonico"
                   @Html.EditorFor(model => model.Recapito, new { htmlAttributes = new { @class = "form-control" } })
                   @Html.ValidationMessageFor(model => model.Recapito, "", new { @class = "text-danger" })
                   @Html.LabelFor(model => model.Indirizzo, htmlAttributes: new { @class = "control-label col-md-2" })
            <input type="text" class="form-control" placeholder="Indirizzo"
                   @Html.EditorFor(model => model.Indirizzo, new { htmlAttributes = new { @class = "form-control" } })
                   @Html.ValidationMessageFor(model => model.Indirizzo, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Inserisci nel Database" class="btn btn-success" />
                </div>
            </div>
            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>




        </div>
       
    </div>
}

