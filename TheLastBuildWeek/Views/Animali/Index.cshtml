@model IEnumerable<TheLastBuildWeek.Models.T_Animali>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row row-cols-3 justify-content-evenly">
    @foreach (var item in Model)
    {
        <div class="mb-4 d-flex justify-content-center">
            <div class="myCard">
                <div class="innerCard">
                    <div class="frontSide">
                        <img src="~/Content/Assets/@Html.DisplayFor(modelItem => item.FotoAnimale)" height="100%" class="card-img-top" alt="..." />
                    </div>
                    <div class="backSide text-light">
                        <div class="card-body  d-flex flex-column justify-content-evenly testo-cards">
                            <h5 class="card-title text-center">@Html.DisplayFor(modelItem => item.NomeAnimale)</h5>
                            <p class="card-text text-center">@Html.DisplayFor(modelItem => item.Tipologia)</p>
                            <p class="card-text text-center">@Html.DisplayFor(modelItem => item.CodiceMicrochip)</p>
                            <div class="d-flex justify-content-evenly">
                                <a @Html.ActionLink("Dettagli", "Details", new { id = item.IDAnimale }, new { @class = "btn btn-primary" })

                                       <div> <a @Html.ActionLink("Modifica", "ModificaPizza", new { @id = item.IDAnimale }, new { @class = "btn btn-warning" }) </div>
               				           <div> <a @Html.ActionLink("Elimina", "CancellaPizza", new { @id = item.IDAnimale }, new { @class = "btn btn-danger" }) </div>
            			            

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

