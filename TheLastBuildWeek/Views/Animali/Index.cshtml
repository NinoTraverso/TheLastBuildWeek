@model IEnumerable<TheLastBuildWeek.Models.T_Animali>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<div class="row row-cols-3 justify-content-evenly">
    @foreach (var item in Model)
    {
        <div class="mb-4 d-flex justify-content-center">
            <div class="myCard">
                <div class="innerCard">
                    <div class="frontSide">
                        <img src="~/Content/images/@Html.DisplayFor(modelItem => item.FotoAnimale)" height="100%" class="card-img-top" alt="..." />
                    </div>
                    <div class="backSide text-light">
                        <div class="card-body  d-flex flex-column justify-content-center testo-cards">
                            <p class="card-title text-center">@Html.DisplayFor(modelItem => item.NomeAnimale)</p>
                            @if (item.HasMicrochip == true)
                            {
                                <p class="card-text text-center">Codice del Microchip:@Html.DisplayFor(modelItem => item.CodiceMicrochip)</p>
                                <p class="card-text text-center">Proprietario:@Html.DisplayFor(modelItem => item.CognomeProprietario) @Html.DisplayFor(modelItem => item.NomeProprietario)</p>
                            }
                            @if (item.IsSmarrito == true)
                            {
                                <p class="card-text text-center">L'animale risulta smarrito</p>
                            }
                          
                        <div class="d-flex justify-content-evenly">
                            @if (User.IsInRole("Veterinario"))
                            {

                                <div> <a @Html.ActionLink("Modifica", "EditAnimale", new { @id = item.IDAnimale }, new { @class = "btn btn-warning" }) </div>
                                <div> <a @Html.ActionLink("Elimina", "CancelAnimal", new { @id = item.IDAnimale }, new { @class = "btn btn-danger" }) </div>
                            }
                            else
                            {
                        <div> <a @Html.ActionLink("Più info", "DetailsAnimal", new { @id = item.IDAnimale }, new { @class = "btn btn-danger" }) </div>
                            }

                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


